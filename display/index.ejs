                <input type="radio" name="pvs" id="pv1">
                <input type="radio" name="pvs" id="pv2">
                <input type="radio" name="pvs" id="pv3">
                

                <div class = "slide pv">
                    <img :src="showcase1">
                </div>
                <div class = "slide">
                    <img :src="showcase2">
                </div>
                <div class = "slide">
                    <img :src="showcase3">
                </div>

                <div class="navigation-auto">
                    <div class="auto-btn1"></div>
                    <div class="auto-btn2"></div>
                    <div class="auto-btn3"></div>
                </div>
            </div>
            <div class="navigation-manual">
                <label for="pv1" class="manual-btn"></label>
                <label for="pv2" class="manual-btn"></label>
                <label for="pv3" class="manual-btn"></label>
            </div>

        </div>
        <!--Preview Slide--> 
    </div>
